{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "components/*": [
        "./components/*"
      ],
    },
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2015.promise",
      "es2016.array.include",
      "es7",
      "es2017",
      "es2017.object",
      "es2015.iterable"
    ]
  }
}